FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["BEAUTIFY_COMMAND.API/BEAUTIFY_COMMAND.API.csproj", "BEAUTIFY_COMMAND.API/"]
COPY ["BEAUTIFY_COMMAND.APPLICATION/BEAUTIFY_COMMAND.APPLICATION.csproj", "BEAUTIFY_COMMAND.APPLICATION/"]
COPY ["BEAUTIFY_COMMAND.CONTRACT/BEAUTIFY_COMMAND.CONTRACT.csproj", "BEAUTIFY_COMMAND.CONTRACT/"]
COPY ["BEAUTIFY_COMMAND.PERSISTENCE/BEAUTIFY_COMMAND.PERSISTENCE.csproj", "BEAUTIFY_COMMAND.PERSISTENCE/"]
COPY ["BEAUTIFY_COMMAND.DOMAIN/BEAUTIFY_COMMAND.DOMAIN.csproj", "BEAUTIFY_COMMAND.DOMAIN/"]
COPY ["BEAUTIFY_COMMAND.INFRASTRUCTURE/BEAUTIFY_COMMAND.INFRASTRUCTURE.csproj", "BEAUTIFY_COMMAND.INFRASTRUCTURE/"]
COPY ["BEAUTIFY_COMMAND.PRESENTATION/BEAUTIFY_COMMAND.PRESENTATION.csproj", "BEAUTIFY_COMMAND.PRESENTATION/"]
RUN dotnet restore "BEAUTIFY_COMMAND.API/BEAUTIFY_COMMAND.API.csproj"
COPY . .
WORKDIR "/src/BEAUTIFY_COMMAND.API"
RUN dotnet build "BEAUTIFY_COMMAND.API.csproj" -c $BUILD_CONFIGURATION -o /app/build 

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "BEAUTIFY_COMMAND.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "BEAUTIFY_COMMAND.API.dll"]
